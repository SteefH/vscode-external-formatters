{
	"name": "external-formatters",
	"displayName": "External formatters",
	"description": "Use any program as formatter for your source files",
	"publisher": "SteefH",
	"repository": {
		"type": "git",
		"url": "https://github.com/SteefH/vscode-external-formatters.git"
	},
	"license": "BSD-3-Clause",
	"version": "0.1.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Formatters"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "External formatters",
			"properties": {
				"externalFormatters": {
					"type": "object",
					"additionalProperties": {
						"type": "object",
						"properties": {
							"command": {
								"type": "string",
								"description": "Command used as external formatter"
							},
							"arguments": {
								"type": "array",
								"items": {
									"type": "string"
								}
							}
						},
						"required": [
							"command"
						]
					}
				}
			}
		}
	},
	"icon": "icon.png",
	"galleryBanner": {
		"color": "#282828",
		"theme": "dark"
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vsce": "^1.71.0",
		"vscode-test": "^1.2.2"
	}
}
